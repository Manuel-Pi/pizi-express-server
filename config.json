{
	"port": 8087,
	"https": false,
	"staticServerFolder": "apps",
	"apiServerFolder": "apis",
	"logger":{
		"server": "info",
		"moins-de-neuf": "debug",
		"pizi-chat": "info"
	},
	"users": {
		"url": "/pizi-users"
	},
	"email":{
		"url": "/pizi-email",
		"role": "admin",
		"printToConsole": true,
		"auth": {
			"type": "OAuth2",
			"json": "../data/gmail.json"
		}
	},
	"jwt": {
		"needToken": false,
		"urls": [
			"/pizi-rest",
			"/pizi-email",
			"/pizi-users/getUser",
			"/pizi-users/updateUser/",
			"/pizi-users/deleteUser/"
		],
		"token": {
			"path": "/token",
			"checkPath": "/check",
			"key": "p!z!K3y",
			"expire": "30d",
			"payload":{
				"iss": "http://localhost:8087"
			}
		}
	},
	"db": "mongodb://0.0.0.0/test",
	"rest": {
		"url": "/pizi-rest",
		"name": "Pizi RESTFull Server",
		"restrictions": {
			"default": {
				"get": "anonymous",
				"put": "admin",
				"post": "admin",
				"delete": "admin",
				"attributes": {
					"_id": "nobody",
					"__v":"admin",
					"password": "nobody",
					"email": "admin"
				}
			},
			"users": {
				"attributes": {
					"role": "anonymous"
				}
			},
			"games": {
				"all": "admin",
				"attributes": {
					"pickStack": "admin",
					"playedCards": "admin",
					"quikPlay": "useless"
				}
			}
		}
	},
	"cache":{
		"expirationTime": "1h"
	},
	"utils":{
		
	},
	"watch":{
		"enable": true,
		"projects": [
			"moins-de-neuf"
		]
	}
}