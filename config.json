{
	"port": 8087,
	"https": false,
	"appsPath": "./apps",
	"apisPath": "./apis",
	"log":{
		"console": "debug",
		"loggers":{
			"server": {
				"level": "debug",
				"enabled": true,
				"filename": "server.log"
			},
			"moins-de-neuf":  {
				"level": "debug",
				"filename": "moins-de-neuf.log"
			},
			"pizi-chat": {
				"console": false,
				"level": "debug",
				"filename": "pizi-chat.log"
			},
			"app": {
				"console": false,
				"level": "debug",
				"filename": "server-app.log"
			}
		}
	},
	"users": {
		"url": "/pizi-users"
	},
	"email":{
		"url": "/pizi-email",
		"role": "admin",
		"printToConsole": false,
		"auth": {
			"type": "OAuth2",
			"json": "../data/gmail.json"
		}
	},
	"jwt": {
		"token": {
			"path": "/token",
			"checkPath": "/check",
			"key": "p!z!K3y",
			"expire": "30d",
			"payload":{
				"iss": "http://pizi-server"
			}
		},
		"roles": {
			"superAdmin": {
				"inherit": ["basic", "admin"]
			}
		},
		"restrictions": {
			"/pizi-email": ["superAdmin"]
		}
	},
	"db": "mongodb://0.0.0.0/test",
	"rest": {
		"url": "/pizi-rest",
		"name": "Pizi RESTFull Server",
		"restrictions": {
			"default": {
				"get": "anonymous",
				"put": "admin",
				"post": "admin",
				"delete": "admin",
				"attributes": {
					"_id": "admin",
					"__v":"admin",
					"password": "nobody",
					"email": "admin"
				}
			},
			"users": {
				"get": "basic"
			},
			"games": {
				"attributes": {
					"pickStack": "admin",
					"playedCards": "admin",
					"quikPlay": "useless"
				}
			}
		}
	},
	"cache":{
		"expirationTime": "1h"
	},
	"utils":{
		"enabled": false
	},
	"watch":{
		"enabled": true,
		"projects": [
			"moins-de-neuf"
		]
	},
	"webdav":{
		"enabled": false,
		"folderPath": "/webdav",
		"url": "/pizi-webdav"
	}
}