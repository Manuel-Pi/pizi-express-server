{
  "name": "pizi-express-server",
  "version": "1.0.0",
  "description": "Simple RESTFull server",
  "author": "Manuel Pi",
  "license": "ISC",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "jest --runInBand",
    "build": "rm -rf ./dist && tsc -p ./tsconfig.prod.json && resolve-tspaths -p ./tsconfig.prod.json",
    "buildStart": "npm run buildServer && npm run start",
    "deploy": "docker compose build && docker-compose up -d",
    "deployClean": "docker compose build --parallel && docker-compose up -d --force-recreate",
    "deployApps": "cp -R ./apps/* ./ROOT",
    "deployAppsDev": "cp -R ./apps/* ./ROOT  && node ./deployAppsDev.js",
    "start": "node dist",
    "startNodemon": "nodemon ./server.js --inspect",
    "createCertificate": "cd ./server/certificates/ && openssl req -x509 -nodes -days 730 -newkey rsa:2048  -keyout cert.key -out cert.pem -config req.cnf -sha256",
    "lint": "eslint",
    "update_app": "rm ./package-lock.json && rm -rf ./node_modules/pizi-server-app && npm install pizi-server-app",
    "clear_modules": "rm -f ./package-lock.json && rm -rf ./node_modules",
    "clean_modules": "npm run clear_modules && npm i",
    "build_doc": "swagger-cli bundle ./docs/api/api.yaml --outfile ./docs/api/build/pizi-server.yaml --type yaml",
    "migration": "./node_modules/.bin/migrate create --template-file ./migrations/templates/migration-template.js"
  },
  "jest": {
    "roots": [
      "./src",
      "./tests"
    ],
    "globalSetup": "./tests/globalSetup.ts",
    "globalTeardown": "./tests/globalTearDown.ts",
    "setupFiles": [
      "./tests/setEnvVars.ts"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "preset": "ts-jest/presets/default-esm",
    "testEnvironment": "node",
    "verbose": true,
    "moduleNameMapper": {
      "^~(.*)\\.js$": "<rootDir>/src$1",
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "@node-oauth/oauth2-server": "^5.1.0",
    "@types/bcrypt": "^5.0.2",
    "@types/http-errors": "^2.0.4",
    "axios": "^1.6.7",
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^5.4.1",
    "jwt-decode": "^4.0.0",
    "memory-cache": "^0.2.0",
    "migrate": "^2.1.0",
    "mongodb": "6.3",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "pizi-server-app": "github:Manuel-Pi/pizi-server-app#develop",
    "shelljs": "^0.8.5",
    "socket.io": "^4.7.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.9.2",
    "@types/shelljs": "^0.8.15",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.6",
    "resolve-tspaths": "^0.8.17",
    "supertest": "^6.3.4",
    "swagger-cli": "^4.0.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.2.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Manuel-Pi/pizi-express-server.git"
  }
}
